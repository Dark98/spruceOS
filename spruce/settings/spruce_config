[System]
"" "Shutdown when idle in menu" "Off|2m|5m|10m" "Off|2m|5m|10m" "$HELP$ get idlemon_in_menu '5m'" "$HELP$ update idlemon_in_menu 'Off' && $IDLEMON_MM$ in_menu Off|$HELP$ update idlemon_in_menu '2m' && $IDLEMON_MM$ in_menu 2m|$HELP$ update idlemon_in_menu '5m' && $IDLEMON_MM$ in_menu 5m|$HELP$ update idlemon_in_menu '10m' && $IDLEMON_MM$ in_menu 10m" ""
"" "Shutdown when idle in game" "Off|2m|5m|10m|30m" "Off|2m|5m|10m|30m" "$HELP$ get idlemon_in_game '30m'" "$HELP$ update idlemon_in_game 'Off' && $IDLEMON_MM$ in_game Off|$HELP$ update idlemon_in_game '2m' && $IDLEMON_MM$ in_game 2m|$HELP$ update idlemon_in_game '5m' && $IDLEMON_MM$ in_game 5m|$HELP$ update idlemon_in_game '10m' && $IDLEMON_MM$ in_game 10m|$HELP$ update idlemon_in_game '30m' && $IDLEMON_MM$ in_game 30m" ""
@"Excludes ports"
"" "Shutdown after sleep" "Off|Instant|2m|5m|10m|30m|60m" "Off|Instant|2m|5m|10m|30m|60m" "$HELP$ get sleep_powerdown '5m'" "$HELP$ update sleep_powerdown 'Off'|$HELP$ update sleep_powerdown 'Instant'|$HELP$ update sleep_powerdown '2m'|$HELP$ update sleep_powerdown '5m'|$HELP$ update sleep_powerdown '10m'|$HELP$ update sleep_powerdown '30m'|$HELP$ update sleep_powerdown '60m'" ""
@"Excludes ports
"" "Skip shutdown confirmation" "|" "on|off" "$HELP$ check skip_shutdown_confirm" "$HELP$ update skip_shutdown_confirm on|$HELP$ update skip_shutdown_confirm off" ""
@"While in main menu or native PICO-8"
"" "Blue LED mode" "||" "Always on|On in menu only|Always off" "$LCD$ check" "$LCD$ on|$LCD$ menu|$LCD$ off" ""
"" "Show battery percentage" "|" "on|off" "$HELP$ check show_battery_percent" "$HELP$ update show_battery_percent on|$HELP$ update show_battery_percent off" ""
"-e" "Enable Recents in main menu" "|" "on|off" "$HELP$ check recentsTile" "$RECENTS$|$RECENTS$" ""
"" "Rumble intensity" "Strong|Medium|Weak|Off" "Strong|Medium|Weak|Off" "$HELP$ get rumble_intensity 'Medium'" "$HELP$ update rumble_intensity 'Strong'|$HELP$ update rumble_intensity 'Medium'|$HELP$ update rumble_intensity 'Weak'|$HELP$ update rumble_intensity 'Off'" "$RUMBLE$"
@"For system notifications"

