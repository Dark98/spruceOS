#Editd by Lonko
#Xbox360 Controller Button Layout (Swap a/b & x/y)

[controls]
overlay = clear

guide = hold_state hotkey1
r2 = hold_state hotkey2

[controls:hotkey1]
overlay = override

guide = hold_state

x = p #pause
a = f9 #reset
y = f12 #screenshot
b = m #mute/unmute
start = esc #exit
select = y #toggle fast forward
l1 = f7 #load state
r1 = f5 #save state

[controls:hotkey2]
overlay = override

r2 = hold_state

y = e #C-U
a = 6 #C-D
x = 7 #C-L
b = 8 #C-R

